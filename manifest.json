{
  "manifest_version": 3,
  "name": "AI Form Filler",
  "version": "1.0.0",
  "description": "Fill forms instantly using AI and your saved dataset.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "options_page": "options.html"
}
